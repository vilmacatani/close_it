<div class="navbar navbar-expand-sm navbar-light navbar-lewagon gray-back">
  <div class="container-fluid">

    <div class="d-flex gap-3 align-items-end">
      <div class="startup-font-title"><%= startup.user.company_name.upcase %></div>
      <div class="page-startup-font-title">OVERVIEW</div>
    </div>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= image_tag "logo-blue-white.svg", class: "avatar-grey-page dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Edit Profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Dashboard", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link"  do %>
              <i class="fa-sharp fa-solid fa-arrow-right-to-bracket"></i>
            <% end %>

          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
