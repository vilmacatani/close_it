

<%= render "shared/navbar" %>

<div class="members-cointainer d-flex">
  <div class="list-members" data-controller="bio-show">
    <div class= "list-itself" data-filter-list-target="list">

      <div class= "description-team-members">
                  <%# <% @members.each do |member| %>
           <div class= "card-left-member d-none" style="background-image:url('https://source.unsplash.com/random/?portrait&<%= rand(1...100) %>')">
              <div class="card-left-bio">
                <h1 id="card-left-name"> <%= @members.first.first_name %> <%= @members.first.last_name %></h1>
                  <p> <%= @members.first.bio %></p>
                  <h2>Role</h2>
                  <p id="card-left-role"><%= @members.first.position %></p>

               </div>
                   <%# <% end %>
            </div>
      </div>
        <div class= "members-cards">
          <div class="gallery">
             <% @members.each do |member| %>
                <div class="card-height">
                  <figure class="gallery__item gallery__item--1">
                    <img src="https://source.unsplash.com/random/300x300/?portrait&<%= rand(1...100) %>" class="gallery__img" alt="Image 1">
                    <div class="card-member-name">
                      <div class="name-boxed">
                        <h3 class= "member-name"><%=member.first_name%> <%=member.last_name%></h3>
                      </div>
                    </div>
                    <%# <div class="class-boxed">
                      <p class= "startup-class"><%=@startup.funding %></p>
                    <%# </div> %>
                  </figure>
                </div>
             <% end %>
          </div>
        </div>
   </div>
  </div>
</div>
