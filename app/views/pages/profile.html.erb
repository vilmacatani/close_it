<div class= "home-container">
  <div class="signup-container">
    <div class="investor-as-text">
      <p id="investor-text">EDIT YOUR INFO AS A</p>
    </div>
    <div class="investor-edit-page">
      <%= simple_form_for @investor do |f| %>
        <p class="investor-title">INVESTOR</p>
        <%= f.collection_select :investor_type, Investor::INVESTORS, :to_s, :titleize, { include_blank: 'Select investor type' } %>
        <%= f.collection_select :funding_type, Investor::FUNDINGS, :to_s, :titleize, { include_blank: 'Select funding type' } %>
        <%= f.input :private, disabled: false %>
        <div class="form-actions">
          <%= f.button :button, class: "create-button" do %>
            <i class="fa-solid fa-check"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    </div>
  </div>
  <div class="signup-container">
    <div class="user-as-text">
      <p id="user-text">EDIT YOUR INFO AS A</p>
    </div>
    <div class="home-signup-page">
      <%= simple_form_for @user, method: :patch, url: update_profile_path(@user) do |f| %>
        <%= f.error_notification %>
        <p class="user-edit-title">USER</p>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <%= f.input :first_name,
                      hint: "",
                      required: false,
                      input_html: { autocomplete: "first name" } %>

          <%= f.input :last_name,
                      hint: "",
                      required: false,
                      input_html: { autocomplete: "last name" } %>

          <%= f.input :address,
                      hint: "",
                      required: false,
                      input_html: { autocomplete: "address" } %>

          <%= f.input :city,
                      hint: "",
                      required: false,
                      input_html: { autocomplete: "city" } %>

            <label class="country-label" for="">Country</label>
           <%= f.text_field :country,
                      hint: "",
                      required: false,
                      class: "form-control string optional",
                      input_html: { autocomplete: "country" } %>

          <%= f.input :company_name,
                      hint: "",
                      required: false,
                      input_html: { autocomplete: "company-name" } %>

          <%#= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%#= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :button, "Next", class: "signup-button" do %>
            <i class="fa-solid fa-check"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <%# <h3>Cancel my account</h3> %>

    <%# <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

      <%# <%=link_to "Back", :back %>

    <%# </div>  %>
  </div>
</div>
