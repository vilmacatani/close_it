<%= simple_form_for(request, html: { data: {
  controller: "update-pending-requests",
  update_pending_requests_target: "form", action: "submit->update-pending-requests#answer"}}) do |f| %>
  <%= f.input :pending, :as => :hidden, :input_html => { :value => false } %>
  <%= f.input :accepted, :as => :hidden, :input_html => { :value => true } %>
  <%= f.button :submit, "Accept", class: "btn btn-success"%>
<% end %>

