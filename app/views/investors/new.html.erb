<div class= "home-container">
  <div class="home-description">
    <p>We are a team of motivated professionals working tirelessly to increase startup funding by connecting investors.</p>
  </div>
  <div class="signup-container">
    <div class="investor-signup-page">
      <div class="joining-as-text">
        <p id="joining-text">JOINING AS</p>
      </div>
      <%= simple_form_for [current_user, @investor] do |f| %>
        <p class="investor-title">INVESTOR</p>
        <%= f.collection_select :investor_type, Investor::INVESTORS, :to_s, :titleize, { include_blank: 'Select investor type' } %>
        <%= f.collection_select :funding_type, Investor::FUNDINGS, :to_s, :titleize, { include_blank: 'Select funding type' } %>
        <%= f.input :private, disabled: false %>
        <%= f.submit class: "create-button" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
