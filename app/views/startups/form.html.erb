<div class= "home-container" >
<div class="start-arrow">

</div>
  <div class="home-description">
    <p>We are a team of motivated professionals working tirelessly to increase startup funding by connecting investors.</p>
  </div>
  <div class="signup-container">
    <div class="joining-as-text">
      <p id="joining-text">JOINING AS</p>
      <div class="startup-links">
        <h3 ><i id="fa-sharp fa-solid fa-arrow-right"></i> <%= link_to "COMPANY",  new_user_registration_path  %></h3>
        <h3 ><i class="fa-sharp fa-solid fa-arrow-right"></i> <%= link_to "FUNDING",  new_user_registration_path  %></h3>
        <h3 ><i class="fa-sharp fa-solid fa-arrow-right"></i> <%= link_to "TEAM",  new_user_registration_path  %></h3>
      </div>

     </div>
    <div class="investor-signup-page">
     <%= simple_form_for(@startup, method: :post, url: new_startup_registration_path) do |f| %>
        <p class="investor-title">STARTUP</p>

        <div class="form-inputs">
         <%= f.input :industry %>
          <%= f.input :headcount %>
          <%= f.input :turnover %>
          <%= f.input :funding_amount %>
          <%= f.input :funding_round_end_date %>
          <%= f.input :team %>
        </div>

          <div class="form-actions">
            <%= f.button :button, "Next", class: "signup-button" do %>
              <i class="fa-solid fa-arrow-right text-white"></i>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>
